<%- include('../partials/header') %>

<h1>All Piroshky</h1>

<a href="/piroshkys/new">New</a>
    <h1>Piroshky</h1>
    <% for (key in piroshkys) { %>
        <hr>
        <h3><%= piroshkys[key].name %></h3>
        <h4><%= piroshkys[key].filling %></h4>
        <p><%= piroshkys[key].size %></p>
        <a href='/piroshkys/<%= key %>'><button>Show</button></a>
        <br>
        <br>
        <a href='/piroshkys/<%= key %>/edit'><button>Edit</button></a>
        <br>
        <br>
        <form method="POST" action="/piroshkys/<%= key %>?_method=DELETE">
        <button class="delete" type="submit">Delete</button>
        </form>
        <hr>
        <br>
    <% } %>

<%- include('../partials/footer') %>